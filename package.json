{
  "name": "rpg-bot",
  "version": "1.0.0",
  "description": "A Discord RPG bot with AI-powered adventures",
  "main": "dist/index.js",
  "scripts": {
    "tts:dev": "python tts/main.py",
    "bot:dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"pnpm run tts:dev\" \"pnpm run bot:dev\"",
    "clean": "rm -rf dist node_modules",
    "clean:dist": "rm -rf dist",
    "clean:prisma": "rm -rf node_modules/.prisma",
    "prebuild": "pnpm run clean:dist",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "dev:debug": "concurrently \"python tts/main.py\" \"tsx --inspect src/index.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "setup": "pnpm run clean && pnpm install && cd tts && pip3 install -r requirements.txt && python download_models.py && cd .. && pnpm run prisma:generate && pnpm run build",
    "restart": "pnpm run clean:dist && pnpm run build && pnpm run start",
    "tts:download": "python tts/download_models.py",
    "tts:check": "python tts/check_models.py",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@prisma/client": "^6.3.1",
    "@solana/web3.js": "^1.98.0",
    "axios": "^1.7.9",
    "chalk": "^4.1.2",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.1.1",
    "ora": "^5.4.1",
    "qrcode": "^1.5.4",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.19",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "prisma": "^6.3.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}