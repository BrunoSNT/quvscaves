{
  "name": "rpg-discord-bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "clean:dist": "rm -rf dist",
    "clean:prisma": "rm -rf node_modules/.prisma",
    "prebuild": "pnpm run clean:dist",
    "build": "tsc",
    "start": "concurrently \"python tts/main.py\" \"node dist/index.js\"",
    "dev": "concurrently \"python tts/main.py\" \"tsx watch src/index.ts\"",
    "dev:debug": "concurrently \"python tts/main.py\" \"tsx --inspect src/index.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "setup": "pnpm run clean && pnpm install && cd tts && pip3 install -r requirements.txt && python download_models.py && cd .. && pnpm run prisma:generate && pnpm run build",
    "restart": "pnpm run clean:dist && pnpm run build && pnpm run start",
    "tts:download": "python tts/download_models.py",
    "tts:check": "python tts/check_models.py"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@prisma/client": "^5.22.0",
    "@solana/web3.js": "^1.91.1",
    "axios": "^1.7.9",
    "chalk": "^5.4.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.1.1",
    "ora": "^8.2.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^8.2.2",
    "prisma": "^5.10.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}